<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:text="@string/Follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Follow_Btn"
        android:elevation="1dp"
        android:layout_below="@+id/userlocation_txt"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/Unfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Unfollow_Btn"
        android:layout_below="@+id/Follow_Btn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/username_txt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/useremail_txt"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textSize="18sp"
        android:layout_below="@+id/username_txt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userlocation_txt"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:textStyle="italic"
        android:textSize="14sp"
        android:layout_below="@+id/useremail_txt"
        android:layout_centerHorizontal="true" />

</RelativeLayout>