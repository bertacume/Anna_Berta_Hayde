<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="upc.eet.pma.travelapp.NewUserActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTxt"
        android:hint="Nombre completo"
        android:layout_alignBaseline="@+id/namelbl"
        android:layout_alignBottom="@+id/namelbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/emailTxt"
        android:hint="e-mail address"
        android:layout_below="@+id/nameTxt"
        android:layout_alignLeft="@+id/nameTxt"
        android:layout_alignStart="@+id/nameTxt"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="E-mail:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emaillbl"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/emailTxt"
        android:layout_alignBottom="@+id/emailTxt"
        android:layout_alignLeft="@+id/passwordlbl"
        android:layout_alignStart="@+id/passwordlbl" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/namelbl"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/emaillbl"
        android:layout_alignEnd="@+id/emaillbl"
        android:elevation="1dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="enter password"
        android:id="@+id/passwordtxt"
        android:layout_below="@+id/emailTxt"
        android:layout_alignLeft="@+id/emailTxt"
        android:layout_alignStart="@+id/emailTxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/passwordtxt"
        android:layout_alignRight="@+id/passwordtxt"
        android:layout_alignEnd="@+id/passwordtxt"
        android:id="@+id/confirmtxt"
        android:hint="re-enter password" />

    <TextView
        android:text="Confirm:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmpswrdlbl"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/confirmtxt"
        android:layout_alignBottom="@+id/confirmtxt"
        android:layout_alignLeft="@+id/passwordlbl"
        android:layout_alignStart="@+id/passwordlbl" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordlbl"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="22dp"
        android:layout_alignBaseline="@+id/passwordtxt"
        android:layout_alignBottom="@+id/passwordtxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <Button
        android:text="create new user"
        android:layout_width="wrap_content"
        android:id="@+id/createUserBtn"
        android:layout_marginTop="37dp"
        android:layout_height="50dp"
        android:layout_below="@+id/confirmtxt"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="BACK TO LOG IN"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:id="@+id/backLoginBtn"
        android:layout_below="@+id/createUserBtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
