<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="upc.eet.pma.travelapp.NewUserActivity">

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="61dp"
        android:id="@+id/namelbl"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTxt"
        android:hint="Nombre completo"
        android:layout_alignBaseline="@+id/namelbl"
        android:layout_alignBottom="@+id/namelbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="E-mail:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emaillbl"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/emailTxt"
        android:layout_alignBottom="@+id/emailTxt"
        android:layout_alignLeft="@+id/namelbl"
        android:layout_alignStart="@+id/namelbl"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/emailTxt"
        android:hint="e-mail address"
        android:layout_below="@+id/nameTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="Profile pic:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailTxt"
        android:layout_alignLeft="@+id/emaillbl"
        android:layout_alignStart="@+id/emaillbl"
        android:layout_marginTop="18dp"
        android:id="@+id/profilepiclbl"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <Button
        android:text="creat new user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creatUserBtn"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/namelbl"
        android:layout_toEndOf="@+id/namelbl"
        android:layout_marginBottom="68dp" />

</RelativeLayout>
